[colors]
foreground = #eaedf4 
background = #0000
bgsolid = #2e3440
graydark = #535757
gray = #7a8288
graylight = #9aa2a8

[bar/base]
font-0="SF Pro Display:style=light":size=11;2"
font-1="Weather Icons:size=11;4"
font-2="NotoSansMono Nerd Font:size=17;5"
font-3="Material Icons:style=regular:size=12;3"
font-4="Overpass Mono:style=regular:size=11;2"
font-5="NotoSansMono Nerd Font:size=11;3"

background = ${colors.background}
foreground = ${colors.foreground}

offset-y = 3 

radius = 15

height = 30
enable-ipc = true
padding = 3

[bar/main]
inherit = bar/base

monitor = DP-2
width = 99%
offset-x = 0.5%

tray-position = center
tray-background = ${colors.bgsolid}

modules-center = round-left margin round-right
modules-right = round-left memory wired-network time round-right
modules-left = round-left powermenu weather workspace1 round-right

[bar/secondary]
inherit = bar/base

monitor = DP-4
bottom = true

border-right-size = 1
border-left-size = 1

;background = 2e3440
width = 98%
offset-x = 1%

;foreground = #2e3440
modules-center = round-left workspace0 round-right
modules-right = round-left time round-right

;                      _       _           
;  _ __ ___   ___   __| |_   _| | ___  ___ 
; | '_ ` _ \ / _ \ / _` | | | | |/ _ \/ __|
; | | | | | | (_) | (_| | |_| | |  __/\__ \
; |_| |_| |_|\___/ \__,_|\__,_|_|\___||___/
;
[module/margin]
type = custom/text

content = "                                                                          "
content-foreground = ${colors.bgsolid}
content-background = ${colors.bgsolid}

[module/round-left]
type = custom/text

content = %{T3}%{T-}
content-foreground = ${colors.bgsolid}
content-padding=0

[module/round-right]
type = custom/text

content = 
content-foreground = ${colors.bgsolid}
content-padding=0

[module/workspace1]
format-background = ${colors.bgsolid}
type = custom/script
exec = leftwm-state -w 1 -t /home/paul/.config/leftwm/themes/current/template.liquid
tail = true
format-font=6

[module/workspace0]
format-background = ${colors.bgsolid}
type = custom/script
exec = leftwm-state -w 0 -t /home/paul/.config/leftwm/themes/current/template.liquid
tail = true
format-font=6

[module/nvidia]
format-background = ${colors.bgsolid}
type = custom/script
exec = echo GPU: $(nvidia-smi -q -d TEMPERATURE | grep Current |head -n 1|cut -d : -f 2|cut -d " " -f 2)°C $(nvidia-smi -q -d UTILIZATION |grep Gpu |cut -d : -f 2|cut -d " " -f 2)%
interval = 1

[module/weather]
format-background = ${colors.bgsolid}
type = custom/script
exec = busctl --user -j get-property io.ntfd /weather openweathermap.strings RenderedTemplate | jq -r .data
interval = 60

[module/memory]
format-background = ${colors.bgsolid}
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-font=6
label = %gb_used%

[module/xwindow]
format-background = ${colors.bgsolid}
type = internal/xwindow
label = %title:1:0%
label-empty = Empty 
label-empty-font = 2


[module/wired-network]
format-connected-background = ${colors.bgsolid}
type = internal/network
interface = eno1
interval = 1

format-connected = <label-connected>
label-connected = %downspeed:9%

label-disconnected = 
;so both LAN ports show their speed on one module
accumulate-stats = true

[module/time]
format-background = ${colors.bgsolid}
type = internal/date
interval = 1
time = "%H:%M:%S"
date = "%d %b"

label =  %time% | %date%

[module/powermenu]
format-background = ${colors.bgsolid}
type = custom/menu

expand-right = true

format-spacing = 1
format-font = 6

label-open = 
label-close = 
label-separator = 

; reboot
menu-0-1 = 
menu-0-1-exec = menu-open-1
; poweroff
menu-0-2 = 
menu-0-2-exec = menu-open-2
; logout
menu-0-0 = 
menu-0-0-exec = lxsession-logout

menu-1-0 = 
menu-1-0-exec = reboot

menu-2-0 = 
menu-2-0-exec = poweroff

[module/temps]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
base-temperature = 30
warn-temperature = 75
units = true

format = 
format-warn = <ramp><label-warn>  
format-background-warn = ${colors.foreground}
format-foreground-warn = ${colors.background}
format-padding=1

label = %temperature-c%
label-warn = %temperature-c%
 
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 


[module/temps2]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
base-temperature = 30
warn-temperature = 75
units = true

format =
format-warn = <ramp><label-warn>  
format-background-warn = ${colors.foreground}
format-foreground-warn = ${colors.background}
format-padding=1

label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/cpulast]
type = internal/cpu
interval = 1
format = <label>
label = %percentage%%
;label-font = 6


[settings]
format-padding = 2
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true
