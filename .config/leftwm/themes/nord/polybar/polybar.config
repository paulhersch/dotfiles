include-directory = ~/.config/leftwm/themes/nord/polybar/modulebloat/

[colors]
foreground = #eaedf4 
background = #0000
bgsolid = #2E3440
graydark = #505262
gray = #6a7278
graylight = #9aa2a8

[bar/base]

font-0="SF Pro Display:style=light":size=11;2"
font-1="Weather Icons:size=11;4"
font-2="JetBrainsMono Nerd Font:size=18;5"
font-3="Material Icons:style=regular:size=12;3"
font-4="NotoSansMono Nerd Font:size=11;3"
font-5="Font Awesome 5 Brands:style=regular:size=12;2"

background = ${colors.background}
foreground = ${colors.foreground}

offset-y = 5

height = 30
enable-ipc = true
padding = 3

[bar/top]
inherit = bar/base

monitor = DP-2
width = 100%

tray-position = center
tray-background = ${colors.bgsolid}

modules-center = round-left margin margin margin margin round-right
modules-right = round-left memory round-left-gray wired-network round-left-light time-light round-right-light-end
modules-left = round-left-gray-end weather round-right-gray workspace0 round-right

[bar/bottom]
inherit = bar/base

monitor = DP-4
bottom = true

width = 100%

modules-left = round-left-gray-end launcher round-right-gray workspace1 round-right margininvis round-left polywins round-right
modules-right = round-left time-dark round-right

;                      _       _           
;  _ __ ___   ___   __| |_   _| | ___  ___ 
; | '_ ` _ \ / _ \ / _` | | | | |/ _ \/ __|
; | | | | | | (_) | (_| | |_| | |  __/\__ \
; |_| |_| |_|\___/ \__,_|\__,_|_|\___||___/
;
[module/launcher]
type = custom/text
click-left = rofi -show drun -theme ~/.config/leftwm/themes/nord/rofi/startmenu.rasi
content = 
content-font = 5
content-background = ${colors.graydark}

[module/polywins]
type = custom/script
exec = ~/.config/leftwm/themes/current/polybar/polywins.sh 2>/dev/null
format = <label>
label = %output%
format-padding=0
tail = true
label-background = ${colors.bgsolid} 
label-font = 5

[module/margin]
type = custom/text
content = "                "
content-background = ${colors.bgsolid}

[module/margininvis]
type = custom/text
content = " "
content-foreground = #0000

[module/workspace1]
format-background = ${colors.bgsolid}
type = custom/script
exec = leftwm-state -w 1 -t ~/.config/leftwm/themes/current/template.liquid
tail = true
format-font=5

[module/workspace0]
format-background = ${colors.bgsolid}
type = custom/script
exec = leftwm-state -w 0 -t ~/.config/leftwm/themes/current/template.liquid
tail = true
format-font=5

[module/nvidia]
format-background = ${colors.bgsolid}
type = custom/script
exec = echo GPU: $(nvidia-smi -q -d TEMPERATURE | grep Current |head -n 1|cut -d : -f 2|cut -d " " -f 2)°C $(nvidia-smi -q -d UTILIZATION |grep Gpu |cut -d : -f 2|cut -d " " -f 2)%
interval = 1

[module/weather]
format-background = ${colors.graydark}
type = custom/script
exec = busctl --user -j get-property io.ntfd /weather openweathermap.strings RenderedTemplate | jq -r .data
interval = 60

[module/memory]
format-background = ${colors.bgsolid}
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-font=5
label = %gb_used%

[module/xwindow]
format-background = ${colors.bgsolid}
type = internal/xwindow
label = %title:1:0%
label-empty = Empty 
label-empty-font = 2


[module/wired-network]
format-connected-background = ${colors.graydark}
type = internal/network
interface = eno1
interval = 1

format-connected = <label-connected>
label-connected = %downspeed:9%

label-disconnected = 
;so both LAN ports show their speed on one module
accumulate-stats = true

[module/timebase]
type = internal/date
interval = 1
time = "%H:%M:%S"
date = "%d %b"
label =  %time% | %date%

[module/time-light]
inherit = module/timebase
format-background = ${colors.gray}

[module/time-dark]
inherit = module/timebase
format-background = ${colors.bgsolid}

[module/temps]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input
base-temperature = 30
warn-temperature = 75
units = true

format = 
format-warn = <ramp><label-warn>  
format-background-warn = ${colors.foreground}
format-foreground-warn = ${colors.background}
format-padding=1

label = %temperature-c%
label-warn = %temperature-c%
 
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 


[module/temps2]
type = internal/temperature
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input
base-temperature = 30
warn-temperature = 75
units = true

format =
format-warn = <ramp><label-warn>  
format-background-warn = ${colors.foreground}
format-foreground-warn = ${colors.background}
format-padding=1

label-warn = %temperature-c%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/cpulast]
type = internal/cpu
interval = 1
format = <label>
label = %percentage%%
;label-font = 6


[settings]
format-padding = 2
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
pseudo-transparency = true
