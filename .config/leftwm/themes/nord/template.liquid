{% for tag in workspace.tags %}
	{% if tag.mine %}
		%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
		%{F#eaedf4} {{""}}%{F-}
		%{A}
	{% elsif tag.visible  %}
		%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
		%{F#9aa2a8} {{""}}%{F-}
		%{A}
	{% elsif tag.busy %}
		%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
		%{F#505262} {{""}}%{F-}
		%{A}
	{% else tag.visible  %}
		%{A1:$SCRIPTPATH/change_to_tag {{workspace.index}} {{tag.index}}:}
		%{F#505262} {{""}}%{F-}
		%{A}
	{% endif %}
{% endfor %}
